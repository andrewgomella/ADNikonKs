<?xml version="1.0" standalone="no" ?>
<!-- Attributes -->
<Attributes
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://epics.aps.anl.gov/areaDetector/attributes ../attributes.xsd"
    >
     <!-- camera information -->
    <Attribute name="Image No.;"                                                type="PARAM"    source="ARRAY_COUNTER"                             datatype="INT"        description="Image counter"/>
    <Attribute name="MaxSizeX;"                                                 type="PARAM"    source="MAX_SIZE_X"                                datatype="INT"        description="Detector X size"/>
    <Attribute name="MaxSizeY;"                                                 type="PARAM"    source="MAX_SIZE_Y"                                datatype="INT"        description="Detector Y size"/>
    <Attribute name="Camera Model;"                                             type="PARAM"    source="MODEL"                                     datatype="STRING"     description="Camera model"/>
    <Attribute name="Camera Manf;"                                              type="PARAM"    source="MANUFACTURER"                              datatype="STRING"     description="Camera manufacturer"/>
    <Attribute name="Camera Exp time (sec);VPFI:Qi2:cam1:AcquireTime_RBV;"      type="EPICS_PV" source="VPFI:Qi2:cam1:AcquireTime_RBV"             dbrtype="DBR_NATIVE"  description="Camera ExpLength"/>
    <Attribute name="Camera Gain (ISO);VPFI:Qi2:cam1:Gain_RBV;"                 type="EPICS_PV" source="VPFI:Qi2:cam1:Gain_RBV"                    dbrtype="DBR_NATIVE"  description="Camera Gain"/>
     <!-- xray information -->
    <Attribute name="X-ray (kVp);VPFI:OXFORD:xray:KVP_MIN;"                     type="EPICS_PV" source="VPFI:OXFORD:xray:KVP_MIN"                  dbrtype="DBR_NATIVE"  description="X-ray KVP"/>
    <Attribute name="X-ray (W);VPFI:OXFORD:xray:WATT_MIN;"                      type="EPICS_PV" source="VPFI:OXFORD:xray:WATT_MIN"                 dbrtype="DBR_NATIVE"  description="X-ray Power"/>
    <Attribute name="X-ray (ms);VPFI:OXFORD:xray:MS_RBV;"                       type="EPICS_PV" source="VPFI:OXFORD:xray:MS_RBV"                   dbrtype="DBR_NATIVE"  description="X-ray Exposure time"/>
    <Attribute name="X-ray (mAs);VPFI:OXFORD:xray:MAS_RBV;"                     type="EPICS_PV" source="VPFI:OXFORD:xray:MAS_RBV"                  dbrtype="DBR_NATIVE"  description="X-ray Flux Rate"/>
     <!-- motor information -->
    <Attribute name="G0:z (mm);VPFI:KOHZU:m1;"                                  type="EPICS_PV" source="VPFI:KOHZU:m1.RBV"                         dbrtype="DBR_NATIVE"      description="M1 position"/>
    <Attribute name="G0:x (mm);VPFI:KOHZU:m2;"                                  type="EPICS_PV" source="VPFI:KOHZU:m2.RBV"                         dbrtype="DBR_NATIVE"      description="M2 position"/>
    <Attribute name="G0:y (mm);VPFI:KOHZU:m3;"                                  type="EPICS_PV" source="VPFI:KOHZU:m3.RBV"                         dbrtype="DBR_NATIVE"      description="M3 position"/>
    <Attribute name="G0:Rz (deg);VPFI:KOHZU:m4;"                                type="EPICS_PV" source="VPFI:KOHZU:m4.RBV"                         dbrtype="DBR_NATIVE"      description="M4 position"/>
    <Attribute name="G0:Rx (deg);VPFI:KOHZU:m5;"                                type="EPICS_PV" source="VPFI:KOHZU:m5.RBV"                         dbrtype="DBR_NATIVE"      description="M5 position"/>
    <Attribute name="G0:Ry (deg);VPFI:KOHZU:m6;"                                type="EPICS_PV" source="VPFI:KOHZU:m6.RBV"                         dbrtype="DBR_NATIVE"      description="M6 position"/>
    <Attribute name="G1:z (mm);VPFI:KOHZU:m7;"                                  type="EPICS_PV" source="VPFI:KOHZU:m7.RBV"                         dbrtype="DBR_NATIVE"      description="M7 position"/>
    <Attribute name="G1:x (mm);VPFI:KOHZU:m8;"                                  type="EPICS_PV" source="VPFI:KOHZU:m8.RBV"                         dbrtype="DBR_NATIVE"      description="M8 position"/>
    <Attribute name="G1:y (mm);VPFI:KOHZU:m9;"                                  type="EPICS_PV" source="VPFI:KOHZU:m9.RBV"                         dbrtype="DBR_NATIVE"      description="M9 position"/>
    <Attribute name="G1:Rz (deg);VPFI:KOHZU:m10;"                               type="EPICS_PV" source="VPFI:KOHZU:m10.RBV"                        dbrtype="DBR_NATIVE"      description="M10 position"/>
    <Attribute name="G1:Rx (deg);VPFI:KOHZU:m11;"                               type="EPICS_PV" source="VPFI:KOHZU:m11.RBV"                        dbrtype="DBR_NATIVE"      description="M11 position"/>
    <Attribute name="G1:Ry (deg);VPFI:KOHZU:m12;"                               type="EPICS_PV" source="VPFI:KOHZU:m12.RBV"                        dbrtype="DBR_NATIVE"      description="M12 position"/>
    <Attribute name="G2:z (mm);VPFI:KOHZU:m13;"                                 type="EPICS_PV" source="VPFI:KOHZU:m13.RBV"                        dbrtype="DBR_NATIVE"      description="M13 position"/>
    <Attribute name="G2:x (mm);VPFI:KOHZU:m14;"                                 type="EPICS_PV" source="VPFI:KOHZU:m14.RBV"                        dbrtype="DBR_NATIVE"      description="M14 position"/>
    <Attribute name="G2:y (mm);VPFI:KOHZU:m15;"                                 type="EPICS_PV" source="VPFI:KOHZU:m15.RBV"                        dbrtype="DBR_NATIVE"      description="M15 position"/>
    <Attribute name="G2:Rz (deg);VPFI:KOHZU:m16;"                               type="EPICS_PV" source="VPFI:KOHZU:m16.RBV"                        dbrtype="DBR_NATIVE"      description="M16 position"/>
    <Attribute name="G2:Rx (deg);VPFI:KOHZU:m17;"                               type="EPICS_PV" source="VPFI:KOHZU:m17.RBV"                        dbrtype="DBR_NATIVE"      description="M17 position"/>
    <Attribute name="G2:Ry (deg);VPFI:KOHZU:m18;"                               type="EPICS_PV" source="VPFI:KOHZU:m18.RBV"                        dbrtype="DBR_NATIVE"      description="M18 position"/>
    <!-- scan information -->
    <Attribute name="Scan 1 PV;VPFI:SCAN:scan1.P1PV;"                           type="EPICS_PV" source="VPFI:SCAN:scan1.P1PV"                      dbrtype="DBR_NATIVE"      description="Scan 1 Positioner"/>
    <Attribute name="Scan 2 PV;VPFI:SCAN:scan2.P1PV;"                           type="EPICS_PV" source="VPFI:SCAN:scan2.P1PV"                      dbrtype="DBR_NATIVE"      description="Scan 2 Positioner"/>
    <Attribute name="Scan 3 PV;VPFI:SCAN:scan3.P1PV;"                           type="EPICS_PV" source="VPFI:SCAN:scan3.P1PV"                      dbrtype="DBR_NATIVE"      description="Scan 3 Positioner"/>

    <Attribute name="Scan 1 Pos Delay;VPFI:SCAN:scan1.PDLY;"                    type="EPICS_PV" source="VPFI:SCAN:scan1.PDLY"                      dbrtype="DBR_NATIVE"      description="Scan 1 Settle"/>
    <Attribute name="Scan 2 Pos Delay;VPFI:SCAN:scan2.PDLY;"                    type="EPICS_PV" source="VPFI:SCAN:scan2.PDLY"                      dbrtype="DBR_NATIVE"      description="Scan 2 Settle"/>
    <Attribute name="Scan 3 Pos Delay;VPFI:SCAN:scan3.PDLY;"                    type="EPICS_PV" source="VPFI:SCAN:scan3.PDLY"                      dbrtype="DBR_NATIVE"      description="Scan 3 Settle"/>

    <Attribute name="Scan 1 Step (mm);VPFI:SCAN:scan1.P1SI;"                    type="EPICS_PV" source="VPFI:SCAN:scan1.P1SI"                      dbrtype="DBR_NATIVE"      description="Scan 1 Step"/>
    <Attribute name="Scan 2 Step (mm);VPFI:SCAN:scan2.P1SI;"                    type="EPICS_PV" source="VPFI:SCAN:scan2.P1SI"                      dbrtype="DBR_NATIVE"      description="Scan 2 Step"/>
    <Attribute name="Scan 3 Step (mm);VPFI:SCAN:scan3.P1SI;"                    type="EPICS_PV" source="VPFI:SCAN:scan3.P1SI"                      dbrtype="DBR_NATIVE"      description="Scan 3 Step"/>

    <Attribute name="Scan 1 Start;VPFI:SCAN:scan1.P1SP;"                        type="EPICS_PV" source="VPFI:SCAN:scan1.P1SP"                      dbrtype="DBR_NATIVE"      description="Scan 1 Start"/>
    <Attribute name="Scan 2 Start;VPFI:SCAN:scan2.P1SP;"                        type="EPICS_PV" source="VPFI:SCAN:scan2.P1SP"                      dbrtype="DBR_NATIVE"      description="Scan 2 Start"/>
    <Attribute name="Scan 3 Start;VPFI:SCAN:scan3.P1SP;"                        type="EPICS_PV" source="VPFI:SCAN:scan3.P1SP"                      dbrtype="DBR_NATIVE"      description="Scan 3 Start"/>

    <Attribute name="Scan 1 End;VPFI:SCAN:scan1.P1EP;"                          type="EPICS_PV" source="VPFI:SCAN:scan1.P1EP"                      dbrtype="DBR_NATIVE"      description="Scan 1 End"/>
    <Attribute name="Scan 2 End;VPFI:SCAN:scan2.P1EP;"                          type="EPICS_PV" source="VPFI:SCAN:scan2.P1EP"                      dbrtype="DBR_NATIVE"      description="Scan 2 End"/>
    <Attribute name="Scan 3 End;VPFI:SCAN:scan3.P1EP;"                          type="EPICS_PV" source="VPFI:SCAN:scan3.P1EP"                      dbrtype="DBR_NATIVE"      description="Scan 3 End"/>

    <Attribute name="Scan 1 Position (mm);VPFI:SCAN:scan1.CPT;"                 type="EPICS_PV" source="VPFI:SCAN:scan1.CPT"                       dbrtype="DBR_NATIVE"      description="Scan 1 Current Position"/>
    <Attribute name="Scan 2 Position (mm);VPFI:SCAN:scan2.CPT;"                 type="EPICS_PV" source="VPFI:SCAN:scan2.CPT"                       dbrtype="DBR_NATIVE"      description="Scan 2 Current Position"/>
    <Attribute name="Scan 3 Position (mm);VPFI:SCAN:scan3.CPT;"                 type="EPICS_PV" source="VPFI:SCAN:scan3.CPT"                       dbrtype="DBR_NATIVE"      description="Scan 3 Current Position"/>

    <Attribute name="Scan Time Start;VPFI:SCAN:scanProgress:startingTimeStr;"          type="EPICS_PV" source="VPFI:SCAN:scanProgress:startingTimeStr"     dbrtype="DBR_NATIVE"    description="ScanProgress Start"/>
    <Attribute name="Scan Time Elapsed;VPFI:SCAN:scanProgress:totalElapsedTimeStr;"    type="EPICS_PV" source="VPFI:SCAN:scanProgress:totalElapsedTimeStr" dbrtype="DBR_NATIVE"    description="ScanProgress Elapsed"/>
    <Attribute name="Scan Total Num;VPFI:SCAN:scanProgress:Ntotal;"                    type="EPICS_PV" source="VPFI:SCAN:scanProgress:Ntotal"              dbrtype="DBR_NATIVE"    description="ScanProgress NTotal"/>
    <Attribute name="Scan Num Finished;VPFI:SCAN:scanProgress:Nfinished;"              type="EPICS_PV" source="VPFI:SCANscanProgress:Nfinished"            dbrtype="DBR_NATIVE"    description="ScanProgress Nfinished"/>

    <!-- dark field information -->
    <Attribute name="Offset Date;VPFI:Qi2:OFFSET_DATE;"                                type="EPICS_PV" source="VPFI:Qi2:OFFSET_DATE"                       dbrtype="DBR_NATIVE"  description="Offset Date String"/>
    <Attribute name="Offset Mean (DN);VPFI:Qi2:OFFSET_MEAN_RBV;"                       type="EPICS_PV" source="VPFI:Qi2:OFFSET_MEAN_RBV"                   dbrtype="DBR_NATIVE"  description="Offset Mean counts"/>
    <!-- flat field information -->
    <Attribute name="Flat field Date;VPFI:Qi2:FLAT_DATE;"                              type="EPICS_PV" source="VPFI:Qi2:FLAT_DATE"                         dbrtype="DBR_NATIVE"  description="Flat field Date String"/>
    <Attribute name="Flat field Mean (DN);VPFI:Qi2:FLAT_MEAN_RBV;"                     type="EPICS_PV" source="VPFI:Qi2:FLAT_MEAN_RBV"                     dbrtype="DBR_NATIVE"  description="Flat field Mean counts"/>
    <!-- experiment information -->
    <Attribute name="Sample ID;VPFI:SAMPLE_ID_RBV;"                                    type="EPICS_PV" source="VPFI:SAMPLE_ID_RBV"                         dbrtype="DBR_NATIVE"  description="Sample Identifier"/>
    <Attribute name="Phosphor Type;VPFI:PHOSPHOR_TYPE_RBV;"                            type="EPICS_PV" source="VPFI:PHOSPHOR_TYPE_RBV"                     dbrtype="DBR_NATIVE"  description="Type of Phosphor"/>
    <Attribute name="Detector Pixel Size x (um);VPFI:CAM_PIXEL_SIZE_X_RBV;"            type="EPICS_PV" source="VPFI:CAM_PIXEL_SIZE_X_RBV"                  dbrtype="DBR_NATIVE"  description="Detector pixel size x"/>
    <Attribute name="Pixel Size on Sample x (um);VPFI:SAMP_PIXEL_SIZE_X_RBV;"          type="EPICS_PV" source="VPFI:SAMP_PIXEL_SIZE_X_RBV"                 dbrtype="DBR_NATIVE"  description="Sample pixel size x"/>
    <Attribute name="Pixel Size on Sample y (um);VPFI:SAMP_PIXEL_SIZE_Y_RBV;"          type="EPICS_PV" source="VPFI:SAMP_PIXEL_SIZE_Y_RBV"                 dbrtype="DBR_NATIVE"  description="Sample pixel size y"/>
    <Attribute name="Beam Incidence Sine Angle;VPFI:SINE_PHOSPHOR_RBV;"                type="EPICS_PV" source="VPFI:SINE_PHOSPHOR_RBV"                     dbrtype="DBR_NATIVE"  description="Sine Incidence Angle of X-ray Beam"/>
    <Attribute name="SS to G0 distance (mm);VPFI:SS_G0_DIST_RBV;"                      type="EPICS_PV" source="VPFI:SS_G0_DIST_RBV"                        dbrtype="DBR_NATIVE"  description="source to grating 0 distance"/>
    <Attribute name="SS to G1 distance (mm);VPFI:SS_G1_DIST_RBV;"                      type="EPICS_PV" source="VPFI:SS_G1_DIST_RBV"                        dbrtype="DBR_NATIVE"  description="source to grating 1 distance"/>
    <Attribute name="SS to Sample distance (mm);VPFI:SS_SAMPLE_DIST_RBV;"              type="EPICS_PV" source="VPFI:SS_SAMPLE_DIST_RBV"                    dbrtype="DBR_NATIVE"  description="source to sample distance"/>
    <Attribute name="SS to G2 distance (mm);VPFI:SS_G2_DIST_RBV;"                      type="EPICS_PV" source="VPFI:SS_G2_DIST_RBV"                        dbrtype="DBR_NATIVE"  description="source to grating 2 distance"/>
    <Attribute name="SS to Detector distance (mm);VPFI:SS_DET_DIST_RBV;"               type="EPICS_PV" source="VPFI:SS_DET_DIST_RBV"                       dbrtype="DBR_NATIVE"  description="source to detector distance"/>
    <Attribute name="Additional Comments;VPFI:METADATA_1;"                             type="EPICS_PV" source="VPFI:SS_METADATA_1_RBV"                     dbrtype="DBR_NATIVE"  description="Additional acquisition comments"/>
    <Attribute name="Investigator;VPFI:INVESTIGATOR_RBV;"                              type="EPICS_PV" source="VPFI:INVESTIGATOR_RBV"                      dbrtype="DBR_NATIVE"  description="Investigator ID"/>
</Attributes>